    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link type="text/css" rel="stylesheet" href="~/Content/site.css" />
    <meta name="keywords" content="@ViewBag.Keywords"/>
