            </div>
            <div id="content" class="clear-fix">
                <div id="main">
                    
                    @RenderBody()
                </div>
                <div id="sidebar">
                    <div id="northsidebar" class="sidebar">
                        <div id="search-2" class="widget widget_search">
                            <form role="search" method="get" id="searchform" action="@Url.Action("Query","Post")">
                                <div>
                                    <label class="screen-reader-text" for="s">搜索：</label>
                                    <input type="text" value="" name="s" id="s">
                                    <input type="submit" id="searchsubmit" value="搜索">
                                </div>
                            </form>
                        </div>
                        @Html.Action("PostTop5","Post")
                        @Html.Action("PostTop5Views", "Post")
                        @Html.Action("CategoryList","Post")
                    </div>
                </div>
            </div>
            <div id="footer">
                <a id="gotop" href="#" onclick="MGJS.goTop();return false;">回到顶部</a>
                <a id="powered" href="/">@setting.Powerby</a>
                <div id="copyright">
                    @Html.Raw(setting.Copyright)
                </div>
                @Html.Action("LinkList","Link")
            </div>
        </div>
    </div>
